
.background-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(to bottom, #66ccff,#0e67cc); 
}

.container {
  text-align: center;
}

.entry {
  display: inline-block;
  margin: 20px; /* 增大边距 */
  padding: 30px; /* 增大内边距 */
  background-color: rgba(255, 255, 255, 0.8); /* 使用半透明白色背景 */
  border-radius: 15px; /* 增大圆角 */
  font-size: 24px; /* 增大字体大小 */
  text-decoration: none;
  color: #333;
}

.entry-text {
  font-weight: bold;
